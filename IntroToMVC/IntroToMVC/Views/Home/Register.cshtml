@model IntroToMVC.Models.Person


<h1 class="register">Register</h1>
<form asp-action="MakeNewUser">

    <label for="Username">Username: </label>
    <input name="Username" type="text" placeholder="Enter a username" id="Username" required /><br />

    <label for="Password">Password: </label>
    <input name="Password" type="password" placeholder="Enter a password" id="Password" required /><br />

    <label for="Money">Money: </label>
    <input name="Money" type="number" id="Money" required /><br />

    <button type="submit">Save and Continue</button>


</form>